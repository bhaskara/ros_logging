# Search the db for actions

import argparse
import sys
import pymongo
import time

def main(argv=sys.argv):
    parser = argparse.ArgumentParser(description="Filter action history")
    parser.add_argument('action_name', help="ROS namespace of action")
    parser.add_argument('--max_age', '-x', dest='max_age', type=int,
                        help="Max age in minutes of goal receipt")
    parser.add_argument('--min_age', '-m', dest='min_age', type=int,
                        help="Min age in minutes of goal receipt")

    args = parser.parse_args()
    t = time.time()
    min_time = t - args.max_age if args.max_age else 0.0
    max_time = t - args.min_age if args.min_age else t

    conn = pymongo.Connection()
    db = conn['ros_logging']
    coll = db.action_log
    q = {'goal_time': {'$gte': min_time, '$lte': max_time},
         'name': args.action_name}
    for x in coll.find(q):    
        print x['goal_time']

if __name__=='__main__':
    sys.exit(main())
